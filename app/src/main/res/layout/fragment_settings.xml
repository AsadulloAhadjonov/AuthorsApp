<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bac"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:text="Sozlamalar"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/bac_settings_line"
        android:padding="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:src="@drawable/outline_share_24"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ulashish"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/bac_settings_line"
        android:padding="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:src="@drawable/outline_info_24"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dastur haqida"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/bac_settings_line"
        android:padding="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:src="@drawable/baseline_add_24"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adib qo'shish"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />

    </LinearLayout>

</LinearLayout>